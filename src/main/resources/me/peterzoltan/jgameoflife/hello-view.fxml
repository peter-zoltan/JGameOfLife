<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="me.peterzoltan.jgameoflife.CellMatrix">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane fx:id="cellPane" alignment="CENTER"/>

    <GridPane alignment="CENTER">
        <HBox spacing="10.0" GridPane.rowIndex="0">
            <Button text="Start" onAction="#start"/>
            <Button text="Stop" onAction="#stop"/>
            <Button text="Reset" onAction="#reset"/>
            <Button text="Randomize" onAction="#randomize"/>
        </HBox>
    </GridPane>
</VBox>